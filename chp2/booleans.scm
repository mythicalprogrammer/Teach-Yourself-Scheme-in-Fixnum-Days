; Simple data types (Booleans)
(begin
  (display "True and False in Scheme is represented by: #t and #f")
  (newline))
(begin
  (display "---------")
  (newline))
(begin
  (display "boolean? #t:")
  (newline))
(begin
  (display (boolean? #t))
  (newline))
(begin
  (display "---------")
  (newline))
(begin
  (display "boolean? \"Hello, World!\"")
  (newline))
(begin
  (display (boolean? "Hello, World!"))
  (newline))
(begin
  (display "---------")
  (newline))
(begin
  (display "not #f")
  (newline))
(begin
  (display (not #f))
  (newline))
(begin
  (display "---------")
  (newline))
(begin
  (display "not #t")
  (newline))
(begin
  (display (not #t))
  (newline))
(begin
  (display "---------")
  (newline))
(begin
  (display "not \"Hello, World!\"")
  (newline))
(begin
  (display (not "Hello, World!"))
  (newline))